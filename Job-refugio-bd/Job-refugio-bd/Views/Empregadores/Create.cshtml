@model Job_refugio_bd.Models.Empregador


@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/styleCadastroCandidato.css">

<div class="container">
    <div class="form">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="formHeader">
                <h2>Empregador, faça seu cadastro!</h2>
            </div>
            <div class="inputBox" style="margin-bottom: 2%;">
                <input asp-for="NomeEmpresa" id="nomeEmpresa" placeholder="Nome da Empresa" />
                <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
            </div>
            <div class="inputGroup">
                <div class="inputBox">
                    <input asp-for="Cnpj"  placeholder="CNPJ" />
                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="NomeFantasia" placeholder="Nome Fantasia" />
                    <span asp-validation-for="NomeFantasia" class="text-danger"></span>
                </div>

                

                <div class="inputBox">
                    <input asp-for="Descricao"  placeholder="Descrição da Empresa" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="Endereco"  placeholder="Endereço Completo" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <input asp-for="Cep"  placeholder="CEP" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
                <div class="inputBox">
                    <input asp-for="Telefone"  placeholder="(XX) X XXXX-XXXX" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="inputBox">
                    <input asp-for="Email"  placeholder="E-mail" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                

                <div class="inputBox">
                    <input asp-for="Senha" id="password" placeholder="Sua senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>
            <div class="signupButton">
                <a style="margin-right: 2%" asp-area="" asp-controller="Empregadores" asp-action="Login" class="btn btn-outline-primary">Voltar</a>
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



