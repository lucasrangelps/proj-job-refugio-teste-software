@model Job_refugio_bd.Models.Candidato

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/styleCadastroCandidato.css">

<div class="container">
    <div class="form">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="formHeader">
            <h2>Candidato, faça seu cadastro!</h2>
        </div>
        <div class="inputBox" style="margin-bottom: 2%">
            <input asp-for="NomeUsuario" placeholder="Digite seu nome completo" />
            <span asp-validation-for="NomeUsuario" class="text-danger"></span>
        </div>

        <div class="inputGroup">

            <div class="inputBox">
                <input asp-for="Nacionalidade" placeholder="Nacionalidade" />
                <span asp-validation-for="Nacionalidade" class="text-danger"></span>
            </div>
            <div class="inputBox">
                <input asp-for="Endereco" placeholder="Endereço" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <div class="inputBox">
                <input asp-for="Email" placeholder="Digite seu E-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="inputBox">
                <input asp-for="Celular" placeholder="Telefone" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="inputBox">
                <input asp-for="CPF" placeholder="Digite seu CPF/Passaporte" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="inputBox">
                <input asp-for="DataNascimento" placeholder="Data de Nascimento" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="inputBox">
                <input asp-for="Senha" placeholder="Digite sua senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="inputBox">
                <input asp-for="ConfirmPassword" placeholder="Confirme sua senha" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="signupButton">
                <a style="margin-right: 2%" asp-area="" asp-controller="Candidatos" asp-action="Login" class="btn btn-outline-primary">Voltar</a>
            <input type="submit" value="Criar" class="btn btn-primary" />
        </div>

    </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
