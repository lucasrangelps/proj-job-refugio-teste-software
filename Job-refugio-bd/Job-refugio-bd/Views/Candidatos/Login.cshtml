@model Job_refugio_bd.Models.Candidato

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/styleLogin.css" asp-append-version="true" />

<section class="containerForms">
    <div class="formLogin">
        <div class="formContent">
            <h2>Login</h2>

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="field inputField">
                    <input asp-for="Email"  type="email" placeholder="Email" class="input" autocomplete="on"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="field inputField">
                    <input asp-for="Senha" placeholder="Senha" class="password" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                    <i class="bx bx-hide eyeIcons"></i>
                </div>

             
                <div class="field buttonField">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
            <div class="formLink">
                <a asp-area="" asp-controller="Candidatos" asp-action="Create">Cadastre-se</a>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
